<h1>Listing transactions</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Amount</th>
    <th>Weekly budget</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%= transaction.category.name %></td>
    <td><%= transaction.amount %></td>
    <td><%= transaction.weekly_budget.weekno %></td>
    <td><%= link_to 'Show', weekly_budget_transaction_path(@weekly_budget, transaction) %></td>
    <td><%= link_to 'Edit', edit_weekly_budget_transaction_path(@weekly_budget, transaction) %></td>
    <td><%= link_to 'Destroy', [@weekly_budget, transaction], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

